<?xml version="1.0"?>
<ruleset name="My Partners">
    <description>A coding standard based off seedboxtech/coding-standard/Paysites</description>

    <!-- include all sniffs in the provided standard -->
    <rule ref="PSR2"/>

    <!-- START: my standards -->

    <rule ref="Generic.Arrays.DisallowShortArraySyntax"/>
    <rule ref="PSR2">
      <exclude name="PSR2.Classes.PropertyDeclaration.Underscore"/>
      <exclude name="PSR2.Methods.MethodDeclaration.Underscore"/>
      <exclude name="PSR2.Files.EndFileNewline.NoneFound"/>
    </rule>

    <!-- END: my standards -->


    <!-- START: inherited from seedboxtech/coding-standard/Paysites -->

    <rule ref="Squiz.Commenting.VariableComment"/>
    <rule ref="Squiz.Commenting.DocCommentAlignment"/>
    <rule ref="Squiz.Commenting.InlineComment"/>

    <rule ref="Squiz.Functions.FunctionDeclarationArgumentSpacing">
        <properties>
            <property name="equalsSpacing" value="1"/>
        </properties>
    </rule>

    <!-- Line Length Validations -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="160"/>
            <property name="absoluteLineLimit" value="160"/>
        </properties>
    </rule>

    <rule ref="Generic.Formatting.MultipleStatementAlignment"/>
    <rule ref="Generic.Formatting.SpaceAfterCast"/>
    <rule ref="Squiz.Strings.DoubleQuoteUsage"/>
    <rule ref="Squiz.WhiteSpace.OperatorSpacing"/>
    <rule ref="Squiz.WhiteSpace.MemberVarSpacing"/>
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="ignoreIndentationTokens" type="array" value=""/>
        </properties>
    </rule>
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace.EmptyLines">
        <severity>5</severity>
    </rule>

    <rule ref="Zend.Debug.CodeAnalyzer"/>

    <!-- START: inherited from seedboxtech/coding-standard/Paysites -->
</ruleset>
